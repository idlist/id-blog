---
import { getLangCode, getRoot, useLang } from '@/i18n'
import { slugify, ymdFormat } from '@/utils/server'

import icon_time from '@/assets/icons/time.svg'
import icon_tags from '@/assets/icons/tags.svg'

interface Props {
  title: string
  slug: string
  date: Date
  tags: string[]
  summary?: string
}

const { title, slug, date, tags, summary } = Astro.props

const code = getLangCode(Astro.url)
const root = getRoot(code)
const t = useLang(code)
---

<div class="post">
  <a class="post__link" href={`${root}a/${slug}`}>
    <h2 class="post__title">{title}</h2>
  </a>

  <div class="post-meta">
    <div class="post-time">
      <img class="post-time__icon" src={icon_time.src} alt="time" />
      <time datetime={date.toISOString()}>{ymdFormat(date)}</time>
    </div>

    <div class="post-tags">
      <img class="post-tags__icon" src={icon_tags.src} alt="tags" />
      {
        tags.length ? (
          tags.map((tag) => (
            <a class="post-tags__item" href={`${root}tags/${slugify(tag)}`}>
              {tag}
            </a>
          ))
        ) : (
          <div class="post-tags__no-tags">${t('ui.no-tags')}</div>
        )
      }
    </div>
  </div>

  {
    summary && (
      <>
        <hr class="post__divider" />
        <div class="post__summary">{summary.trim()}</div>
      </>
    )
  }
</div>

<style lang="sass" scoped>
  @use '@/styles/variables' as vars
  @use '@/styles/mixins' as mixins

  .post
    margin: 1.5rem 0

    &:last-child
      margin-bottom: 0

    &__link
      text-decoration: none

    &__title
      @include mixins.link-main

      font-size: 1.5rem
      font-weight: normal
      margin: 0
      margin-bottom: 0.125rem

  .post-meta
    display: grid
    align-items: center
    grid-template-columns: max-content auto
    column-gap: 1rem

    @media (max-width: vars.$screen-md)
      grid-template-columns: 1fr
      row-gap: 0.25rem

  .post-time
    display: flex
    align-items: center
    column-gap: 0.5rem

    &__icon
      width: 1.25rem
      height: 1.25rem

  .post-tags
    display: flex
    align-items: center
    column-gap: 0.5rem
    flex-wrap: wrap

    &__icon
      @extend .post-time__icon

    &__item
      @include mixins.link-sub

      line-height: 1.25
      word-break: break-word

    &__no-tags
      color: var(--color-gray-light)

  .post__divider
    margin: 0.5rem 2rem

    border: none
    border-top: 1px solid var(--color-gray-lighter)

  .post__summary
    color: var(--color-gray-light)
    text-align: right
</style>
