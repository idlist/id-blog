---
interface Props {
  icon: string
  link: string
  text: string
}

const { icon, link, text } = Astro.props
---

<div class="contact">
  <img class="contact__icon" src={icon} alt={`icon ${text}`} />
  <a class="contact__link" href={link} target="_blank" rel="noopener noreferer">{text}</a>
</div>

<style lang="scss">
  @use '@/styles/mixin' as mixin;

  .contact {
    display: flex;
    align-items: center;
    column-gap: 0.5rem;
    margin: 0.125rem 0;

    &__icon {
      width: 1.125rem;
      height: 1.125rem;
    }

    &__link {
      @include mixin.link-sub;
    }
  }
</style>
